{
  "spec": {
    "template": {
      "spec": {
        "affinity": {
          "nodeAffinity": {
            "requiredDuringSchedulingIgnoredDuringExecution": {
              "nodeSelectorTerms": [
                {
                  "matchExpressions": [
                    {
                      "key": "sandbox.gke.io/runtime",
                      "operator": "In",
                      "values": ["gvisor"]
                    }
                  ]
                }
              ]
            }
          }
        },
        "containers": [
          {
            "env": [
              {
                "name": "ATOMIST_CONFIG_PATH",
                "value": "/opt/atm/client.config.json"
              },
              {
                "name": "ATOMIST_GOAL_SCHEDULER",
                "value": "kubernetes"
              },
              {
                "name": "HOME",
                "value": "/home/atomist"
              },
              {
                "name": "TMPDIR",
                "value": "/tmp"
              }
            ],
            "livenessProbe": {
              "httpGet": {
                "path": "/health"
              },
              "initialDelaySeconds": 20
            },
            "readinessProbe": {
              "httpGet": {
                "path": "/health"
              },
              "initialDelaySeconds": 20
            },
            "resources": {
              "limits": {
                "cpu": "1000m",
                "memory": "2048Mi"
              },
              "requests": {
                "cpu": "500m",
                "memory": "1024Mi"
              }
            },
            "securityContext": {
              "allowPrivilegeEscalation": false,
              "privileged": false,
              "readOnlyRootFilesystem": true,
              "runAsGroup": 2866,
              "runAsNonRoot": true,
              "runAsUser": 2866
            },
            "volumeMounts": [
              {
                "mountPath": "/home/atomist",
                "name": "atomist-home"
              },
              {
                "name": "demo-sdm",
                "mountPath": "/opt/atm",
                "readOnly": true
              },
              {
                "mountPath": "/tmp",
                "name": "sdm-tmp"
              }
            ]
          }
        ],
        "initContainers": [
          {
            "args": [
              "git config --global user.email 'bot@atomist.com' && git config --global user.name 'Atomist Bot'"
            ],
            "command": ["/bin/sh", "-c"],
            "env": [
              {
                "name": "HOME",
                "value": "/home/atomist"
              }
            ],
            "image": "atomist/sdm-base:0.4.0-20191204153918",
            "name": "atomist-home-git",
            "securityContext": {
              "allowPrivilegeEscalation": false,
              "privileged": false,
              "readOnlyRootFilesystem": true,
              "runAsGroup": 2866,
              "runAsNonRoot": true,
              "runAsUser": 2866
            },
            "volumeMounts": [
              {
                "mountPath": "/home/atomist",
                "name": "atomist-home"
              }
            ]
          }
        ],
        "runtimeClassName": "gvisor",
        "securityContext": {
          "fsGroup": 2866
        },
        "tolerations": [
          {
            "effect": "NoSchedule",
            "key": "sandbox.gke.io/runtime",
            "operator": "Equal",
            "value": "gvisor"
          }
        ],
        "volumes": [
          {
            "name": "demo-sdm",
            "secret": {
              "defaultMode": 288,
              "secretName": "demo-sdm"
            }
          },
          {
            "emptyDir": {},
            "name": "atomist-home"
          },
          {
            "emptyDir": {},
            "name": "sdm-tmp"
          }
        ]
      }
    }
  }
}
